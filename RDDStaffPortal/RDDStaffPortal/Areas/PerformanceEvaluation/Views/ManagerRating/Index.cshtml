@model RDDStaffPortal.DAL.DataModels.PerformanceEvaluation.RDD_ManagerRating

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<link href="~/Content/extra-style.css" rel="stylesheet" />
<style>

    tbody {
        width: 900px; /* Just for the demo          */
        overflow-y: hidden; /* Trigger vertical scroll    */
        overflow-x: auto; /* Hide the horizontal scroll */
    }
</style>
<input type="hidden" id="hdnRatingNo" />
<input type="hidden" id="hdnEmployeeId" />
<div class="main-panel">
    <div class="container">
        <div class="page-inner">            
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header mb-1">
                        <h4 class="page-title"><button class="p-0 border-transparent" style="font-size:17px"><i class="fas fa-chevron-circle-left pr-1"></i>Back</button> </h4>
                    </div>
                    <div class="card">
                        <div class="card-header">                           
                            <div class="d-flex align-items-center">
                                <h4 class="card-title redtitle">Manager Rating</h4>
                                <div class="form-group ml-auto">
                                    <label>Period-Year</label>
                                    <select id="ddlSelectYear" class="form-control">
                                        <option value="-1">---Select---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mx-3 mt-3">
                                <div class="col-1" id="divProfPic">
                                    <img src="data:image;base64,@HttpContext.Current.Session["LoginName"]" alt="..." class="avatar-img rounded-circle">
                                </div>
                                <div class="col-11 p-0">
                                    <h2 id="headEmpName"></h2>
                                    <div class="row">
                                        <div class="col-3 p-0 emp" style="font-size:16px" id="divDepartment"></div>
                                        <div class="col-3 p-0 emp" style="font-size:16px" id="divCountry"></div>
                                        <div class="col-3 p-0 emp" style="font-size:16px" id="divYear"></div>
                                        <div class="col-3 p-0 emp" style="font-size:16px" id="divPeriod"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="loader1"></div>
                        <div class="card-body">
                            <section id="secEmpDetails">
                                <table class="display table table-striped table-hover" id="tblShowEmployee">
                                    <thead style="background-color: rgba(0,0,0,.05);">
                                        <tr style="font-size:14px">
                                            <th width="20px" scope="col">#</th>
                                            <th scope="col">Employee</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="6" style="text-align:center">Please Wait...</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </section>
                            <section id="secEmpRating">
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/RedDotUtility.js"></script>

<script type="text/javascript">
    function GetDetailsForManager() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetDetailsForManager", "ManagerRating")',
            dataType: "json",
            success: function (data) {
                $("#ddlSelectYear").empty();
                $("#ddlSelectYear").append('<option value="-1">--Select--</option>');
                if (data.Table1.length > 0) {
                    $.each(data.Table1, function (index, value) {
                        $("#ddlSelectYear").append('<option value="' + value.AllYear + '">' + value.AllYear + '</option>');
                    });
                    if (data.Table2.length > 0) {
                        $("#ddlSelectYear").val(data.Table2[0].CurrentYears);
                    }
                }
                $("#headEmpName").empty();
                var str = "";
                str += data.Table[0].EmployeeName;
                str += '<span class="badge badge-danger mb-1 ml-2">' + data.Table[0].DesigName + '</span>';
                $("#headEmpName").append(str);
                $('.emp').empty();
                $("#divDepartment").append('<i class="fas fa-building mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table[0].DeptName);
                $("#divCountry").append('<i class="fa fa-flag mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table[0].Country);
                $("#divYear").append('<i class="fa fa-calendar-alt mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table3[0].Years);
                $("#divPeriod").append('<i class="fas fa-calendar-minus mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table4[0].Period);
                $("#tblShowEmployee tbody").empty();
                var str = "";
                var Slno = 1;
                var d = data.Table5;
                if (d.length > 0) {
                    $.each(d, function (Index, Value) {
                        str += '<tr>';
                        str += '<th scope="row">' + Slno + '</th>';
                        str += '<td style="font-size:16px"><a href="#" target="" class="emprating" data-empid=' + Value.EmployeeId + '>' + Value.EmployeeName + '</a></td>';
                        if (d.Mng_FinalSubmissionStatus == true) {
                            str += '<td><span class="badge badge-success">Success</span></td>';
                        }
                        else {
                            str += '<td><span class="badge badge-warning">Pending</span></td>';
                        }
                        str += '</tr>';
                        Slno++;
                    });
                }
                else {
                    str += '<tr>';
                    str += '<td colspan="6" style="text-align:center">No Employee Filled Their Appraisal Form</td>';
                    str += '</tr>';
                }                       
                $("#tblShowEmployee tbody").append(str);
            }
        });
    }    
    function SaveMngRating(rDD_MngAppraisal) {
        $('.loader1').show();
        var rDD_MngAppraisal = rDD_MngAppraisal;
        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveManagerRating", "ManagerRating")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ rDD_MngAppraisal: rDD_MngAppraisal }),
            dataType: "json",
            success: function (data) {
                debugger
                $('.loader1').hide();
                if (data[0].Outtf == true) {
                    RedDotAlert_Success(data[0].Responsemsg);
                    //GetCategoryWiseEmployeeDetails();
                    GetEmployeeDetails();
                }
                else {
                    RedDotAlert_Error(data[0].Responsemsg);
                }
            }
        });
    }
    $(document).ready(function () {
        $('.loader1').show();
        $("#secEmpRating").hide();
        GetDetailsForManager();      
        
        $("#secEmpRating").load('@Url.Action("GetPartial", "ManagerRating")');
        $('.loader1').hide();
    });
    $(document).on('click', '.emprating', function (e) {
        e.preventDefault();
        $("#divProfPic").hide();
        $('.loader1').show();          
        $("#headEmpName").empty();
        $("#secEmpDetails").hide();        
        var EmpId = $(this).attr("data-empid");
        $("#hdnEmployeeId").val(EmpId);
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetEmployeeRating", "ManagerRating")',
            data: { "EmpId": EmpId },
            dataType: "json",
            success: function (data) { 
                debugger               
                var str = "";                
                str += data.Table[0].EmployeeName;
                str += '<span class="badge badge-danger mb-1 ml-2">' + data.Table[0].DesigName + '</span>';
                $("#headEmpName").append(str);
                $("#divDepartment").empty();
                $("#divCountry").empty();
                $("#divDepartment").append('<i class="fas fa-building mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table[0].DeptName);
                $("#divCountry").append('<i class="fa fa-flag mr-1" style="color:darkgray" aria-hidden="true"></i>' + data.Table[0].Country);
                $("#secEmpRating").show();
                $("#myTab").empty();
                $.each(data.Table1, function (Index, Value) {    
                    var str1 = "";
                    str1 += '<li class="nav-item waves-effect waves-light"><a class="nav-link selectCategory" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false" data="' + Value.CategoryId + '">' + Value.CategoryName + '</a></li >';                    
                    $("#myTab").append(str1);
                });
                
                $("#myTab li:eq(0) a").tab('show');
                var RatingNo = data.Table3[0].RatingNo;
                $("#hdnRatingNo").val(RatingNo);
                var str2 = "";
                var QuestionCount = data.Table2.length;
                var j = 1;
                $("#add-row tbody").empty();
                while (j <= QuestionCount) {
                    $.each(data.Table2, function (Index, Value) {
                        str2 += '<tr>';
                        str2 += '<td style="display:none;"><input type="hidden" id="hdnstarval_' + Value.AppraisalTransId + '" value=""/> </td>';
                        str2 += '<td style="display:none;">' + Value.AppraisalTransId + '</td>';
                        str2 += '<td>' + Value.Question + '</td>';
                        str2 += '<td><div class="stars"><form action="">';
                        for (var i = RatingNo; i > 0; i--) {
                            if (Value.EmployeeRating == i) {
                                str2 += '<input class="dis star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" checked="checked"/> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                            }
                            else {
                                str2 += '<input class="dis star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                            }
                        }
                        str2 += '</form></div></td>';
                        if (Value.EmployeeComment == null) {
                            Value.EmployeeComment = "";
                        }
                        str2 += '<td><textarea id="" name="" rows="5" cols="5" placeholder="" class="dis textarea-style empcomnt">' + Value.EmployeeComment + '</textarea></td>';
                        str2 += '<td style="display:none">' + Value.EmployeeRating + '</td>';
                        str2 += '<td style="display:none"></td>';
                        str2 += '<td><div class="stars"><form action="">';
                        for (var k = RatingNo; k > 0; k--) {
                            if (Value.ManagerRating == k) {
                                str2 += '<input class="distar star star-' + k + '-' + j + '" id="stare-' + k + '-' + j + '" type="radio" name="star" checked="checked"/> <label data-qnos=' + Value.AppraisalTransId + ' data-starnos=' + k + ' class="starlbls star star-' + k + '-' + j + '" for="stare-' + k + '-' + j + '"></label>';
                            }
                            else {
                                str2 += '<input class="distar star star-' + k + '-' + j + '" id="stare-' + k + '-' + j + '" type="radio" name="star" /> <label data-qnos=' + Value.AppraisalTransId + ' data-starnos=' + k + ' class="starlbls star star-' + k + '-' + j + '" for="stare-' + k + '-' + j + '"></label>';
                            }
                            
                        }
                        str2 += '</form></div></td>';

                        if (Value.ManagerComment == null) {
                            Value.ManagerComment = "";
                        }
                        str2 += '<td><textarea rows="5" cols="5" class="textarea-style mngcomnt">' + Value.ManagerComment + '</textarea></td>';                        
                        str2 += '</tr>';
                        j++;
                    });
                    $("#add-row tbody").append(str2);
                    $('.dis').prop("disabled", true);
                    $('.dis').css("cursor", "not-allowed");
                }
                $('.loader1').hide();
            }
        });
    });
    $(document).on('click', '.starlbls', function () {
        var QNo = $(this).attr('data-qnos');
        var StarNo = $(this).attr('data-starnos');
        $('#hdnstarval_' + QNo).val(StarNo);
        $(this).closest("tr").find("td:eq(5)").html(StarNo);
    });
    $(document).on('click', '.selectCategory', function () {
        $("#divBtnSave").hide();
        var CategoryId = $(this).attr("data");
        var Qperiod = $("#ddlSelectYear option:selected").val();
        var EmpId = $("#hdnEmployeeId").val();
        $("#hdnCategoryId").val(CategoryId);
        $("#add-row tbody").empty();
        $("#add-row tbody").append('<tr><td colspan="6" style="text-align:center">Please Wait....</td></tr>');
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetQuestionList", "ManagerRating")',
            data: { "CategoryId": CategoryId, "Qperiod": Qperiod, "EmpId": EmpId},
            dataType: "json",
            success: function (data) {
                debugger                
                var d = data.Table;
                var RatingNo = $("#hdnRatingNo").val();
                var str = "";
                var Count = 0;
                var QuestionCount = d.length;
                var j = 1;
                $("#add-row tbody").empty();
                if (data.Table.length > 0) {
                    $("#hdnAppraisalId").val(data.Table[0].AppraisalId);
                    while (j <= QuestionCount) {
                        $.each(data.Table, function (Index, Value) {
                            str += '<tr>';
                            str += '<td style="display:none;"><input type="hidden" id="hdnstarval_' + Value.AppraisalTransId + '"/> </td>';
                            str += '<td style="display:none" class="qid">' + Value.AppraisalTransId + '</td>';
                            str += '<td>' + Value.Question + '</td>';
                            str += '<td><div class="stars"><form action="">';
                            for (var i = RatingNo; i > 0; i--) {
                                if (Value.EmployeeRating == i) {
                                    str += '<input class="dis star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" checked="checked"/> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                                }
                                else {
                                    str += '<input class="dis star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star"/> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                                }                               
                            }
                            str += '</form></div></td>';
                            if (Value.EmployeeComment == null) {
                                Value.EmployeeComment = "";
                            }
                            str += '<td><textarea id="" name="" rows="5" cols="5" placeholder="" class="textarea-style empcomnt dis">' + Value.EmployeeComment + '</textarea></td>';                            
                            str += '<td style="display:none">' + Value.EmployeeRating + '</td>';
                            str += '<td style="display:none"></td>';
                            str += '<td><div class="stars"><form action="">';
                            for (var k = RatingNo; k > 0; k--) {
                                str += '<input class="distars star star-' + k + '-' + j + '" id="stare-' + k + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + k + ' class="star star-' + k + '-' + j + '" for="stare-' + k + '-' + j + '"></label>';
                            }
                            str += '</form></div></td>';
                            str += '<td><textarea rows="5" cols="5" class="textarea-style mngcomnt" disabled="disabled" style="cursor:not-allowed"></textarea></td>';                                
                           
                            str += '</tr>';
                            j++;
                        });
                    }                    
                    $("#btnSaveRating").text("Update");
                    $("#btnSaveRating").attr("id", "btnUpdateRating");
                    $("#divBtnSave").show();
                }
                else {
                    if (d.length > 0) {
                        while (j <= QuestionCount) {
                            $.each(d, function (Index, Value) {
                                str += '<tr>';
                                str += '<td style="display:none;"><input type="hidden" id="hdnstarval_' + Value.AppraisalTransId + '" /> </td>';
                                str += '<td style="display:none" class="qid">' + Value.AppraisalTransId + '</td>';
                                str += '<td>' + Value.Question + '</td>';
                                str += '<td><div class="stars"><form action="">';
                                for (var i = RatingNo; i > 0; i--) {
                                    str += '<input class="dis star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                                }
                                str += '</form></div></td>';
                                str += '<td><textarea id="" name="" rows="5" cols="5" placeholder="" class="textarea-style empcomnt dis"></textarea></td>'; 
                                str += '<td style="display:none"></td>';
                                str += '<td><div class="stars"><form action="" disabled="disabled">';
                                for (var k = RatingNo; k > 0; k--) {
                                    str += '<input class="distars star star-' + k + '-' + j + '" id="stare-' + k + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + k + ' class="star star-' + k + '-' + j + '" for="stare-' + k + '-' + j + '"></label>';
                                }
                                str += '</form></div></td>';
                                str += '<td><textarea rows="5" cols="5" class="textarea-style mngcomnt" style="cursor:not-allowed"></textarea></td>';                                
                                //str += '<td style="display:hidden">' + Value.AppraisalTransId + '</td>';
                                str += '</tr>';
                                j++;
                            });
                        }
                        $("#btnUpdateRating").text("Save");
                        $("#btnUpdateRating").attr("id", "btnSaveRating");
                        $("#divBtnSave").show();
                        
                    }
                    else {
                        str += '<tr>';
                        str += '<td colspan="6" style="text-align:center">HR Not Launched Appraisal For This Period</td>';
                        str += '</tr>';
                        $("#divBtnSave").hide();
                    }
                }                
                $("#add-row tbody").append(str);  
                $('.dis').attr("disabled", "disabled");  
                if (data.Table2.length > 0) {
                    var SaveStatus = data.Table2[0].Emp_FinalSubmissionStatus;
                }
                if (SaveStatus == true) {
                    $('.distars').attr("disabled", true);
                    $('.distars').css("cursor", "not-allowed");
                    $("#btnUpdateRating").remove();
                }
                else {
                    $('.distars').attr("disabled", false);
                    $('.distars').css("cursor", "");
                }
            }
        });
    });
    $(document).on('click', '#btnSaveRating', function () {
        var rDD_MngAppraisal = {            
            rDD_EmpAppraisalList: []
        };
        $("#add-row tbody tr").each(function () {
            var AppraisalTransId = $(this).closest("tr").find("td:eq(1)").text();
            var MngRating = $('#hdnstarval_' + AppraisalTransId).val();
            var MngComment = $.trim($(".mngcomnt", this).val());
            var rDD_MngAppraisalList = {
                AppraisalTransId: AppraisalTransId,
                ManagerRating: MngRating,
                ManagerComment: MngComment
            };
            rDD_MngAppraisal.rDD_EmpAppraisalList.push(rDD_MngAppraisalList);
        });
        var i = 0;
        var length = rDD_MngAppraisal.rDD_EmpAppraisalList.length;
        while (i < length) {
            if ((rDD_MngAppraisal.rDD_EmpAppraisalList[i].ManagerRating == "") || (rDD_MngAppraisal.rDD_EmpAppraisalList[i].ManagerComment == "")) {
                i++;
            }
            else {
                SaveMngRating(rDD_MngAppraisal);
                return false;
            }
            RedDotAlert_Error("Please Fill At Least One Rating And Its Corresponding Comment");
        }
    });
</script>
