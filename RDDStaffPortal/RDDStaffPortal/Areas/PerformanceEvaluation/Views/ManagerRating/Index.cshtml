    function SaveFinalForm() {
        //$('.loader1').show();
        var EmployeeId = $.trim($("#hdnEmployeeId").val());
        var Year = $.trim($("#divYear").text());
        var Period = $.trim($("#divPeriod").text());
        const swalWithBootstrapButtons = Swal.mixin({
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger',
            buttonsStyling: false,
        })
        swalWithBootstrapButtons.fire({
            title: 'Have you answered all the questions of all categories?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Submit it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            $('.loader1').show();
            if (result.value) {
                $.getJSON("/FinalSaveManagerRating", { "EmployeeId": EmployeeId, "Year": Year, "Period": Period }).done(function (data) {
                    $('.loader1').hide();
                    if (data[0].Outtf == true) {
                        RedDotAlert_Success(data[0].Responsemsg);
                        GetDetailsForManager();
                        $("#ddlSelectYearEmp").attr("hidden", "hidden");
                        $("#ddlSelectYear").removeAttr("style", "display:none");
                    }
                    else {
                        RedDotAlert_Error(data[0].Responsemsg);
                    }
                });
            }
            else if (
                // Read more about handling dismissals
                result.dismiss === Swal.DismissReason.cancel
            ) {
                swalWithBootstrapButtons.fire(
                    'Cancelled',
                    'Your Record  is safe :)',
                    'error'
                )
            }
            $('.loader1').hide();
        });
    }
    
