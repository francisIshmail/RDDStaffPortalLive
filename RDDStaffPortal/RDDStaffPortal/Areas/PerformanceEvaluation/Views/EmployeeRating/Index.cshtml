<script type="text/javascript">
    function GetEmployeeDetails() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetEmployeeDetails", "EmployeeRating")',
            dataType: "json",
            success: function (data) {
                debugger
                var str = "";
                str += data.Table[0].EmployeeName;
                str += '<span class="badge badge-danger mb-1 ml-2">' + data.Table[0].DesigName + '</span>';
                $("#headEmpName").append(str);
                $("#divDepartment").append(data.Table[0].DeptName);
                $("#divCountry").append(data.Table[0].Country);
                $("#divYear").append(data.Table1[0].Years);
                $("#divPeriod").append(data.Table2[0].Period);
                $("#hdnEmployeeId").val(data.Table[0].EmployeeId);
                $("#hdnCategoryId").val(data.Table3[0].CategoryId);
                $.each(data.Table3, function (Index, Value) {
                    var str1 = "";
                    str1 += '<li class="nav-item waves-effect waves-light"><a class="nav-link selectCategory" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false" data="' + Value.CategoryId + '">' + Value.CategoryName + '</a></li >';
                    $("#myTab").append(str1);
                });
                $("#myTab li:eq(0) a").tab('show');
                var RatingNo = data.Table5[0].RatingNo;
                $("#hdnRatingNo").val(RatingNo);
                var str2 = "";
                var QuestionCount = data.Table4.length;
                var j = 1;
                if (data.Table4.length > 0) {

                    while(j<=QuestionCount) {
                        $.each(data.Table4, function (Index, Value) {
                            str2 += '<tr>';
                            str2 += '<td style="display:none;"><input type="hidden" id="hdnstarval_' + Value.QuestionTransId +'" /> </td>';
                            str2 += '<td style="display:none;">' + Value.QuestionTransId + '</td>';
                            str2 += '<td>' + Value.Question + '</td>';
                            str2 += '<td><div class="stars"><form action="">';
                            for (var i = RatingNo; i > 0; i--) {
                                str2 += '<input class="star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId+' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j +'"></label>';
                            }
                            str2 += '</form></div></td>';
                            //str2 += '<td><div class="stars"><form action=""><input class="star star-5" id="star-5" type="radio" name="star" /> <label class="star star-5" for="star-5"></label></form></div>';
                            str2 += '<td><textarea id="" name="" rows="5" cols="5" placeholder="" class="textarea-style empcomnt"></textarea></td>';
                            //str2 += '<td><div class="form-button-action"><button type="button" data-toggle="tooltip" title = "" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task"><i class="fa fa-edit"></i></button></div ></td>';
                            str2 += '</tr>';
                            j++;
                        });
                    }
                    $("#divBtnSave").show();
                    //str2 += '<tr width="100%"><td> <div class="modal-footer"><button type="button" class="btn btn-primary">Save</button></div></td></tr>'
                }
                else {
                    $("#divBtnSave").hide();
                    str2 += '<tr>';
                    str2 += '<td colspan="6" style="text-align:center">HR Not Assigned Any Question Under This Category</td>';
                    str2 += '</tr>';

                }
                $("#add-row tbody").append(str2);
                //$("#hdnRatingNo").val(data.Table5.RatingNo);
            }
        });
    }

    function SaveEmpRating(rDD_EmpAppraisal) {
        $('.loader1').show();
        var rDD_EmpAppraisal = rDD_EmpAppraisal;
        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveEmployeeRating", "EmployeeRating")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ rDD_EmpAppraisal: rDD_EmpAppraisal }),
            dataType: "json",
            success: function (data) {
                debugger
                $('.loader1').hide();
                if (data[0].Outtf == true) {
                    RedDotAlert_Success(data[0].Responsemsg);
                    //GetCategoryWiseEmployeeDetails();                    
                }
                else {
                    RedDotAlert_Error(data[0].Responsemsg);
                }
            }
        });
    }

    $(document).on('click', '.starlbl', function () {
        var QNo = $(this).attr('data-qno');
        var StarNo = $(this).attr('data-starno');
        $('#hdnstarval_' + QNo).val(StarNo);
    });

    $(document).ready(function () {
        $('.loader1').show();
        $("#divBtnSave").hide();
        GetEmployeeDetails();
        $('.loader1').hide();
    });

    $(document).on('click', '.selectCategory', function () {
        $("#divBtnSave").hide();
        var CategoryId = $(this).attr("data");
        $("#hdnCategoryId").val(CategoryId);
        $("#add-row tbody").empty();
        $("#add-row tbody").append('<tr><td colspan="6" style="text-align:center">Please Wait....</td></tr>');
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetQuestionList", "EmployeeRating")',
            data: { "CategoryId": CategoryId},
            dataType: "json",
            success: function (data) {
                debugger
                var d = data.Table;
                var RatingNo = $("#hdnRatingNo").val();
                var str = "";
                var Count = 0;
                var QuestionCount = d.length;
                var j = 1;
                $("#add-row tbody").empty();
                if (d.length > 0) {
                    while (j <= QuestionCount) {
                        $.each(d, function (Index, Value) {
                            str += '<tr>';
                            str += '<td style="display:none;"><input type="hidden" id="hdnstarval_' + Value.QuestionTransId + '" /> </td>';
                            str += '<td style="display:none" class="qid">' + Value.QuestionTransId + '</td>';
                            str += '<td>' + Value.Question + '</td>';
                            str += '<td><div class="stars"><form action="" class="rating">';
                            for (var i = RatingNo; i > 0; i--) {
                                str += '<input class="star star-' + i + '-' + j + '" id="star-' + i + '-' + j + '" type="radio" name="star" /> <label data-qno=' + Value.QuestionTransId + ' data-starno=' + i + ' class="starlbl star star-' + i + '-' + j + '" for="star-' + i + '-' + j + '"></label>';
                            }
                            str += '</form></div></td>';
                            str += '<td><textarea id="" name="" rows="5" cols="5" placeholder="" class="textarea-style empcomnt"></textarea></td>';                                                                                                                                                                                                      str += '<td><div class="form-button-action"><button type="button" data-toggle="tooltip" title = "" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task"><i class="fa fa-edit"></i></button></div ></td>';
                            str += '</tr>';
                            j++;
                        });
                    }
                    $("#divBtnSave").show();
                }
                else {
                    str += '<tr>';
                    str += '<td colspan="6" style="text-align:center">HR Not Assigned Any Question Under This Category</td>';
                    str += '</tr>';
                    $("#divBtnSave").hide();
                }
                $("#add-row tbody").append(str);
            }
        });
    });
    $(document).on('click', '#btnSaveRating', function () {
        var rDD_EmpAppraisal = {
            CategoryId: $.trim($("#hdnCategoryId").val()),
            EmployeeId: $.trim($("#hdnEmployeeId").val()),
            Year: $.trim($("#divYear").text()),
            Period: $.trim($("#divPeriod").text()),
            rDD_EmpAppraisalList:[]
        };
        $("#add-row tbody tr").each(function () {
            var QuestionId = $(this).closest("tr").find("td:eq(1)").text();
            var EmpRating = $('#hdnstarval_' + QuestionId).val(); 
            var EmpComment = $.trim($(".empcomnt", this).val());
            var rDD_EmpAppraisalList = {
                QuestionId: QuestionId,
                EmployeeRating: EmpRating,
                EmployeeComment: EmpComment
            };
            rDD_EmpAppraisal.rDD_EmpAppraisalList.push(rDD_EmpAppraisalList);
            //console.log(rDD_EmpAppraisalList);
        });
        SaveEmpRating(rDD_EmpAppraisal);
    });
</script>

