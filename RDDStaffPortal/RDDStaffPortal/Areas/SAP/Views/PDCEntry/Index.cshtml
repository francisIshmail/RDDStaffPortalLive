<script type="text/javascript">

    function Getdatabase() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetDatabaseList", "PDCEntry")',
            dataType: "json",
            success: function (data) {
                $("#ddlDatabase").empty();
                $("#ddlDatabase").append('<option value="-1">--Select Database--</option>');
                $.each(data.Table, function (index, value) {
                    $("#ddlDatabase").append('<option value="' + value.DBName + '">' + value.DBName + '</option>');
                });
            }
        });
    }
    function GetEmployeeName() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetEmpName", "PDCEntry")',
            dataType: "json",
            success: function (data) {
                var empname = data.Table[0].FullName;
                debugger
                $("#txtCreatedBy").val(empname);
            }
        });
    }
    var arr1 = new Array();
    var arr2 = new Array();
    function GetCustomerList(DBName) {
        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '@Url.Action("GetCustomerNameList", "PDCEntry")',
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({
                DBName: DBName
            }),
            success: function (data) {
                debugger
                arr1 = data;

            }
        });

    }
    function GetBankList(DBName) {
        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '@Url.Action("GetBankNameList", "PDCEntry")',
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({
                DBName: DBName
            }),
            success: function (data) {
                debugger
                arr2 = data;

            }
        });

    }
    $(document).on('focusin', '.datepicker', function () {
        $('.datepicker').datetimepicker({
            format: 'DD/MM/YYYY'           

        });

    });
    $(document).ready(function () {
        GetEmployeeName();
        $(document).on('change', '#ddlDatabase', function () {
            var DbName = $("#ddlDatabase option:selected").val();
            GetCustomerList(DbName);
            GetBankList(DbName);
           
        });

        $(document).ajaxSuccess(function () {
            $('#txtCustomer').autocomplete({
                source: function (request, response) {
                    debugger
                    try {
                        if (arr1 != "") {
                            debugger
                            var k = $('#txtCustomer').val().toLowerCase();
                            var results = arr1.Table.filter(function (elem) {
                                return elem.CardName.toLowerCase().indexOf(k) > -1;
                            });
                            if (results.length > 0) {
                                response($.map(results, function (value, key) {
                                    return {
                                        label: value.CardName,
                                        value: value.CardName,
                                        val1: value.CardCode,
                                    };
                                }));
                            }
                            else {
                                $('#txtCustomer').val('');
                                $("#hdnCardcode").val('');
                                response([{ label: 'No results found.', value: 'No results found.' }]);
                            }

                        }
                    } catch (e) {

                    }
                },
                select: function (event, u) {
                    try {
                        $("#txtCustomer").val(u.item.value);
                        $("#hdnCardcode").val(u.item.val1);
                    } catch (e) {

                    }
                },
                minLength: 1,
                delay: 100
            }).focus(function (e, u) {
                $(this).autocomplete("search", "");
            });

        });
        $(document).ajaxSuccess(function () {
            $('#txtBank').autocomplete({
                source: function (request, response) {
                    debugger
                    try {
                        if (arr2 != "") {
                            debugger
                            var k = $('#txtBank').val().toLowerCase();
                            var results = arr2.Table.filter(function (elem) {
                                return elem.AcctName.toLowerCase().indexOf(k) > -1;
                            });
                            if (results.length > 0) {
                                response($.map(results, function (value, key) {
                                    return {
                                        label: value.AcctName,
                                        value: value.AcctName,
                                        val1: value.AcctCode,
                                    };
                                }));
                            }
                            else {
                                $('#txtBank').val('');
                                $("#hdnBankcode").val('');
                                response([{ label: 'No results found.', value: 'No results found.' }]);
                            }

                        }
                    } catch (e) {

                    }
                },
                select: function (event, u) {
                    try {
                        $("#txtBank").val(u.item.value);
                        $("#hdnBankcode").val(u.item.val1);
                    } catch (e) {

                    }
                },
                minLength: 1,
                delay: 100
            }).focus(function (e, u) {
                $(this).autocomplete("search", "");
            });

        });
    });
    $(document).on('click', '#btnAddPDCentry', function () {
