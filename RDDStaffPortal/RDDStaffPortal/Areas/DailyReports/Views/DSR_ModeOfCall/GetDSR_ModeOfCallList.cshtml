@model List<RDDStaffPortal.DAL.DataModels.DailyReports.RDD_DSR_ModeOfCall>

@foreach (var items in Model)
{

    <div class="col-12 col-sm-6 col-md-2">
        <div class="card danger-border">
            <div class="card-body">
                <div class="ModeOfCalledit">
                    <div class="quickmenu">
                        <button class="btn btn-toggle ml-auto" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-edit"></i></button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item announce" href="#" data-toggle="modal"><i class="fas fa-pencil-alt"></i> Edit</a>
                            <a class="dropdown-item announcedel" href="#" data-toggle="modal"><i class="fas fa-trash-alt"></i>Delete</a>

                        </div>
                    </div>
                    <input type="hidden" id="hdnModeOfCallid-@items.ID" value="@items.ID" />
                    <input type="hidden" id="hdnModeOfCallname-@items.ID" value="@items.ModeOfCall" />
                    <div class="text-center mar-t10 min-height50px">
                        <h6>@items.ModeOfCall</h6>

                    </div>
                </div>

            </div>
        </div>
    </div>
}