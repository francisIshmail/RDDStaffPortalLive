    function GetDeptList() {
        debugger
        $('#setDeptList').html('');

        $.get("/Departments/GetDeptList", null, DataBind);
        function DataBind(DeptNameList) {
            var SetData = $('#setDeptList');
            for (var i = 0; i < DeptNameList.length; i++) {
                var Data = "<tr class='row_ >" + DeptNameList[i].DeptId + "'>" +
