    // Edit row on edit button click
    $(document).on("click", ".edit", function () {
        
        if ($(this).closest('tr').find('td').eq(3).text() == '') {
            $("input[name=rdbtn][value='P']").prop('checked', true);
        } else {
            $("input[name=rdbtn][value='M']").prop('checked', true);
        }
        $('#txtMenuId').val($(this).closest('tr').find('td').eq(0).text());
        $('#txtMenuName').val($(this).closest('tr').find('td').eq(1).text());
        $('#ddlLevels').val($(this).closest('tr').find('td').eq(2).text()).trigger('change');
        $('#txtURL').val($(this).closest('tr').find('td').eq(3).text());    
        $('#txtCssClass').val($(this).closest('tr').find('td').eq(4).text());
        $('#txtDisplaySeq').val($(this).closest('tr').find('td').eq(5).text());
        //var Module = $(this).closest('tr').find('td').eq(6).text();
        //var modules = Module.split('-');
        //$('#ddlModules').val(modules[0]);

       

        var lvls = $('#ddlLevels').val();
        if (lvls > 0) {
            BindModules();
            $('#divmod').show();
        } else {
            $('#divmod').hide();
        }
        $('#ddlModules').val($(this).closest('tr').find("input[id='inphdnmdl']").val()).trigger('change');
        debugger;
       // $('#inpmodulehdn').val();
       

        var IsDefault = $(this).closest('tr').find('input[type="checkbox"]').val();
        if (IsDefault == "on")
            $('#chkIsDefaultMenu').prop("checked", true);
        else
            $('#chkIsDefaultMenu').prop("checked", false);

    });

    //Delete row on delete button click
    $(document).on("click", ".delete", function () {        
        var tr = $(this).closest("tr");
        $.getJSON("/Menus/DeleteMenu", { MenuId: $(this).closest('tr').find('td').eq(0).text() }).done(function (data) {
            alert(data.DeleteFlag);
            if (data.DeleteFlag == "Deleted") {               
                tr.remove();
            }
        });       
    });

