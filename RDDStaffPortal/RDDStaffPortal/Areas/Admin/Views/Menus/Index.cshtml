<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $("#txtSearchMenus").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#tblMenusList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

       // To bind Modules on PageLoad
      //  BindModules();
        GetMenuList();

    });
    $('#divmod').hide();
    
    $("#ddlLevels").on("change", function () {
        var lvls = $('#ddlLevels').val();
        if (lvls > 0) {
            BindModules();
            $('#divmod').show();
        } else {
            $('#divmod').hide();
        }
    });

    $("input[id='rdbn']").on('click', function () {
        debugger
        var typ = $('#rdbn:checked').val();
        if (typ == 'P') {
            $('#divcss').show();
        } else {
            $('#divcss').hide();
        }
    });
    // START : Add New Module //
    $('#BtnAddModule').click(function () {
        debugger;
        if ($("#txtModuleName").val() == "") {
            alert('please enter Module Name');
            $("#txtModuleName").focus();
            return false;
        }
        if ($("#txtModuleCssClass").val() == "") {
            alert('please enter css class for Module');
            $("#txtModuleCssClass").focus();
            return false;
        }
        var ModuleData = {};
        ModuleData["ModuleName"] = $("#txtModuleName").val();
        ModuleData["ModuleCssClass"] = $("#txtModuleCssClass").val();

        var data = JSON.stringify({
            module: ModuleData,
        });
        $.ajax({
            type: "Post",
            url: "/Menus/AddModule",
            data: data,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (result) {
                if (result == "Record Saved Successfully" || result == "Record Updated Successfully") {
                    $('#AlertMessage').html('<div class="alert alert-success alert-dismissible"><a href = "#" class= "close" data-dismiss="alert" aria-label="close" >&times;</a ><strong>Success ! </strong> ' + result + '</div >');
                    $("#txtModuleName").val('');
                    $("#txtModuleCssClass").val(''); 
                    BindModules();
                }
                else {
                    $('#AlertMessage').html('<div class="alert alert-danger alert-dismissible"><a href = "#" class= "close" data-dismiss="alert" aria-label="close" >&times;</a ><strong>Failed ! </strong> ' + result + '</div >');
                }
            }
        });
    });
    // END : Add New Module //


    // START : Fill Modules in Drop down list
    function BindModules() {
        debugger;   
        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '/Menus/BindModules',                            
            data: { Levels: $("#ddlLevels").val() - 1 },
            dataType: "JSON",
            success: function (modules) {
                debugger;
                $("#ddlModules").html("");
                $("#ddlModules").append($('<option/>', { value: -1, text: '--Select--' }));
                $.each(modules, function (i, value) {
                    $("#ddlModules").append(
                        $('<option></option>').val(value.ModuleId).html(value.ModuleName));
                });
            }
        });
       
    }
    // START : Fill Modules in Drop down list


    // START : Bind data of existing Menus
    function GetMenuList() {
        $('#tblMenusList').html('');
        $.get("/Menus/GetMenuList", null, BindMenus);
        function BindMenus(MenuList) {
            var SetData = $('#tblMenusList');
            debugger;
            for (var i = 0; i < MenuList.length; i++) {
                var Data = "<tr class='row_" + MenuList[i].MenuId + "'>" +
                    "<td>" + MenuList[i].MenuId + "</td>" +                   
                    "<td>" + MenuList[i].MenuName + "</td>" +
                    "<td>" + MenuList[i].Levels + "</td>" +
                    "<td>" + MenuList[i].URL + "</td>" +
                    "<td>" + MenuList[i].MenuCssClass + "</td>" +
                    "<td>" + MenuList[i].DisplaySeq + "</td>" +
                    //"<td class='width1px' style='visibility: hidden' >" + MenuList[i].ModuleId + "</td>" +
                    "<td><input id='inphdnmdl' type='hidden' value='" + MenuList[i].ModuleId+"'/>" +  MenuList[i].ModuleName + "</td>";

                    if (MenuList[i].IsDefault == true) {
                        Data = Data + "<td> <div> <input type='checkbox' id='chkIsDefault' checked data-toggle='toggle' data-onstyle='primary' disabled></div></td>  ";
                    }
                    else {
                        Data = Data + "<td> <div> <input id='chkIsDefault' type='checkbox' data-toggle='toggle' data-onstyle='primary' disabled ></div></td>  ";
                }

                Data = Data + "<td> <button type='button' title='Edit' data-toggle='tooltip' class='btn btn-info edit'><i class='fas fa-edit'></i></button> " +
                    "<button type='button' title='Delete' data-toggle='tooltip' class='btn btn-danger delete'><i class='fas fa-trash-alt'></i></button></td ></tr >";

                SetData.append(Data);
            }

            //$('#tblUser').DataTable();
        }

    }
    // START : Fill Modules in Drop down list



    //START : Add New Menu in Module //
    $('#btnSaveMenu').click(function () {

        debugger;
        var Moduleid = $("#ddlModules").val();
        if ($("#ddlLevels").val() == 0) {
            Moduleid = 0;
        } else if ($("#ddlLevels").val() == -1) {
            alert('please select Levels');
            $("#ddlLevels").focus();
            return false;
        }
        if ($.trim($("#txtMenuName").val()) == "") {
            alert('please enter Menu Name');
            $("#txtMenuName").focus();
            return false;
        }
        if ($.trim($("#txtURL").val()) == "" && $("#ddlLevels").val() > 0 && $('#rdbn:checked').val()=="M") {
            alert('please enter URL');
            $("#txtURL").focus();
            return false;
        }
        if ($.trim($("#txtCssClass").val()) == "" && $('#rdbn:checked').val() == "P") {
            alert('please enter css Class');
            $("#txtCssClass").focus();
            return false;
        }
        if ($.trim($("#txtDisplaySeq").val()) == "") {
            alert('please enter menu Display Sequence');
            $("#txtDisplaySeq").focus();
            return false;
        }
        
        if ($("#ddlModules option:selected").index() <= 0 && $("#ddlLevels").val() > 0) {
            alert("Please Select Module");
            $("#ddlModules").focus();
            return false;
        }
       
        if ($("#txtMenuId").val() == "") {
            $("#txtMenuId").val('0');
        }
        var MenuData = {};
        MenuData["Levels"] = $("#ddlLevels").val();
        MenuData["MenuId"] = $("#txtMenuId").val();
        MenuData["MenuName"] = $("#txtMenuName").val();
        MenuData["MenuCssClass"] = $("#txtCssClass").val();
        MenuData["URL"] = $("#txtURL").val();
        MenuData["DisplaySeq"] = $("#txtDisplaySeq").val();
        MenuData["ModuleId"] = Moduleid;
        MenuData["ModuleName"] = $("#ddlModules :selected").text();
        MenuData["IsDefault"] = $("#chkIsDefaultMenu").is(":checked");// $("#chkIsDefaultMenu").val();
        var data = JSON.stringify({
            menu: MenuData,
        });

            $.ajax({
                type: "Post",
                url: "/Menus/AddMenu",
                data: data,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result == "Record Saved Successfully" || result == "Record Updated Successfully") {
                        alert(result);
                        //$('#AlertMessage').html('<div class="alert alert-success alert-dismissible"><a href = "#" class= "close" data-dismiss="alert" aria-label="close" >&times;</a ><strong>Success ! </strong> ' + result + '</div >');
                        $("#txtMenuName").val('');
                        $("#txtCssClass").val('');
                        $("#txtURL").val('');
                        $("#txtDisplaySeq").val('');
                        $("#txtDisplaySeq").val('');
                        $('#ddlLevels').val(-1).trigger('change');
                        GetMenuList();
                    }
                    else {
                        //$('#AlertMessage').html('<div class="alert alert-danger alert-dismissible"><a href = "#" class= "close" data-dismiss="alert" aria-label="close" >&times;</a ><strong>Failed ! </strong> ' + result + '</div >');
                    }
                }
            });

    });

