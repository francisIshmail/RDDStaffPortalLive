        Header += '<h5><label id="lblRemaindays">' + finalRemainDay + '</label> days remaining</h5>';
        $("#Leavedtls").append(Header);
    });
    var totalday = 0;

    $(document).on('change', '[id^=EmployeeId]', function () {

        var EmployeeId = $("#EmployeeId option:selected").val();
        $("#Leavedtls").empty();
        $("#divDates").empty();
        $("#random").show();
        $.ajax({
            type: "POST",
