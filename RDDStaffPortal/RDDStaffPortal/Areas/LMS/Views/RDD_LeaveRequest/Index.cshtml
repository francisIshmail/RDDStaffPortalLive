        $(".dttype").each(function () {
            var currow = $(this).closest('tr');
            var LeaveDate = $(this).find("[id^='divLvDates']").html();
            var LeaveDay = $(this).find("[id^='ddlDayType']").val();
            var LeaveDayType = $(this).find("[id^='ddlDayType'] option:selected").text();
