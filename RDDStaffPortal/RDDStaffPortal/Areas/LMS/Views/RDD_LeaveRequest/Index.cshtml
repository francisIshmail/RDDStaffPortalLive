    var arr = "";

    $(document).ready(function () {
        $(".loader1").hide();

        $('#exampleModal').on('hidden.bs.modal', function (e) {

            $("#Leavedtls").empty();
            $("#divDates").empty();
            $("#random").show();

            $(this)
                .find("input,textarea")
