            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({ EmployeeId: $(this).val() }),


            success: function (data) {

                arr = data;
                $("#Weeklyoff").val(arr.data[0].WeeklyOff);
                $("#LeaveRule").val(arr.data[0].LeaveRules);
            }

