@helper GetSecondview(List<RDDStaffPortal.DAL.DataModels.RDD_firstDashBoard> Secondview)
{
    <div class="row">

        @*@{var submenu = Firstview.Count();}*@
        @foreach (var i in Secondview)
        {


            <div class="@i.colcss">
                <div class="card">
                    <div class="card-header">
                        <div class="card-head-row">
                            <div class="card-title">@i.FirstText</div>
                            <div class="card-tools">
                                <ul class="nav nav-pills nav-secondary nav-pills-no-bd nav-sm" id="pills-tab" role="tablist">

                                    <li class="nav-item">
                                        <button class="btn btn-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="icon-options-vertical"></i></button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="#">Percentage</a>
                                            <a class="dropdown-item" href="#">Number</a>
                                            <a class="dropdown-item" href="#">Tabular</a>

                                        </div>
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="@i.SecondText"></canvas>
                        </div>
                    </div>
                </div>


            </div>
        }
    </div>
}
