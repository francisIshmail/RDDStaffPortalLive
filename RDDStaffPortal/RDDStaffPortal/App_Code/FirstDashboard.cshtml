@helper GetFirstview(List<RDDStaffPortal.DAL.DataModels.RDD_firstDashBoard> Firstview)
{
    <div class="row">

        @*@{var submenu = Firstview.Count();}*@
        @foreach (var i in Firstview)
        {


            <div class="@i.colcss">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5><b>@i.FirstText</b></h5>
                                </div>
                                <h3 class="text-@i.cssclass fw-bold">@i.FirstValue</h3>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5><b>@i.SecondText</b></h5>
                            </div>
                            <h3 class="text-success fw-bold">@i.SecondValue</h3>

                        </div>
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-@i.cssclass" style="width:@i.perValue%" role="progressbar" aria-valuenow=@i.perValue aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <p class="text-muted mb-0">Change</p>
                            <p class="text-muted mb-0">@i.perValue</p>
                        </div>
                    </div>
                </div>


            </div>
        }
    </div>
        }
